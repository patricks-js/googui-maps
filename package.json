{
  "name": "@maps/server",
  "description": "A simulator of google maps.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "pnpm env:load node src/main/server.js",
    "dev": "pnpm env:load node --watch src/main/server.js",
    "lint": "biome lint .",
    "format": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest dev",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "services:up": "pnpm run docker:compose up -d",
    "services:stop": "pnpm run docker:compose stop",
    "services:down": "pnpm run docker:compose down",
    "docker:compose": "docker-compose -f ../../docker-compose.yaml",
    "env:load": "dotenv -e .env.development --",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@fastify/swagger": "8.15.0",
    "@scalar/fastify-api-reference": "1.24.69",
    "fastify": "4.28.1",
    "fastify-plugin": "4.5.1",
    "mongoose": "8.5.2",
    "sinon": "18.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@vitest/coverage-istanbul": "2.0.5",
    "@vitest/ui": "2.0.5",
    "lefthook": "1.7.11",
    "supertest": "7.0.0",
    "vitest": "2.0.5"
  }
}
