{
  "name": "@maps/server",
  "private": true,
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "pnpm env:load node src/server.js",
    "dev": "pnpm env:load node --watch src/server.js",
    "lint": "biome lint .",
    "format": "biome check --write .",
    "db:check": "pnpm env:load drizzle-kit check",
    "db:generate": "pnpm env:load drizzle-kit generate",
    "db:migrate": "pnpm env:load drizzle-kit migrate",
    "db:migrate:drop": "pnpm env:load drizzle-kit drop",
    "db:studio": "pnpm env:load drizzle-kit studio",
    "test": "pnpm env:load vitest run",
    "test:watch": "pnpm env:load vitest dev",
    "test:coverage": "pnpm env:load vitest run --coverage",
    "test:ui": "pnpm env:load vitest --ui",
    "services:up": "pnpm run docker:compose up -d",
    "services:stop": "pnpm run docker:compose stop",
    "services:down": "pnpm run docker:compose down",
    "docker:compose": "docker-compose -f ../../docker-compose.yaml",
    "env:load": "dotenv -e .env.development --"
  },
  "dependencies": {
    "@fastify/autoload": "5.10.0",
    "@fastify/cors": "9.0.1",
    "@fastify/jwt": "8.0.1",
    "@fastify/sensible": "5.6.0",
    "@fastify/swagger": "8.15.0",
    "@scalar/fastify-api-reference": "1.24.69",
    "bcryptjs": "2.4.3",
    "drizzle-orm": "0.33.0",
    "drizzle-zod": "0.5.1",
    "fastify": "4.28.1",
    "fastify-plugin": "4.5.1",
    "fastify-print-routes": "3.2.0",
    "mongoose": "8.5.2",
    "pino-pretty": "11.2.2",
    "postgres": "3.4.4",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "2.0.5",
    "@vitest/ui": "2.0.5",
    "dotenv-cli": "7.4.2",
    "drizzle-kit": "0.24.0",
    "supertest": "7.0.0",
    "vitest": "2.0.5"
  }
}
