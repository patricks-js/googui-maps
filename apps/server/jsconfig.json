{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "build", ".vscode", "coverage", ".npm"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  }
}
